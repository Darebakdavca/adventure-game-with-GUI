<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vse.semestralkaadventurabrad14.main.HomeController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints vgrow="NEVER" />
    <RowConstraints vgrow="SOMETIMES" />
    <RowConstraints vgrow="NEVER" />
  </rowConstraints>
   <children>
      <MenuBar>
          <menus>
              <Menu mnemonicParsing="false" text="Hra">
                  <items>
                      <MenuItem mnemonicParsing="false" onAction="#ukoncitHru" text="Ukončit" />
                      <MenuItem text="Aktualizuj" onAction="#aktualizujSeznamVychodu" />
                  </items>
              </Menu>
          </menus>

      </MenuBar>

      <HBox spacing="5.0" GridPane.rowIndex="2">
         <children>
            <TextField fx:id="vstup" onAction="#odesliVstup" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
            <Button fx:id="tlacitkoOdesli" mnemonicParsing="false" onAction="#odesliVstup" text="Odešli příkaz">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <SplitPane dividerPositions="0.3" GridPane.rowIndex="1">
         <items>
             <ListView onMouseClicked="#klikPanelVychodu" fx:id="panelVychodu" prefHeight="313.0" prefWidth="212.0" />
             <TextArea fx:id="vystup" editable="false" prefHeight="313.0" prefWidth="219.0" />
         </items>
      </SplitPane>
   </children>
